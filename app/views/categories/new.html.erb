<h1 class="text-center">Create new category</h1>

<%= render 'shared/errors', obj: @category %>


<%= form_for @category do |f| %>
  <div class="form-group row">
    <div class="col-sm-2 col-form-label text-right">
      <%= f.label :name %>
    </div>
    <div class="col-sm-8">
      <%= f.text_field :name, class: 'form-control', placeholder: 'Category name', autofocus: true %>
    </div>
  </div>


  <div class="form-group row">
    <div class="col-sm-10 offset-sm-2">
      <%= f.submit class: 'btn btn-primary btn-lg' %>
    </div>
  </div>
<% end %>

<div class="row">
  <div class="col-sm-4 offset-sm-4 text-small">
    [ <%= link_to 'Cancel request and return to articles listing', articles_path %> ]
  </div>
</div>
