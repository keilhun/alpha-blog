<h1 class="text-center">Listing All Categories</h1>

<div class="paging"><%= will_paginate @categories, renderer: WillPaginate::ActionView::Bootstrap4LinkRenderer %></div>
<% @categories.each do |category| %>
  <ul class="listing">
    <div class="row">
      <div class="card card-body bg-light col-4 offset-4 text-center">
        <li class="article-title">
          <%= link_to "#{category.name}", category_path(category) %>
        </li>
        <li><small><%= pluralize(category.articles.count, "article") %></small></li>
      </div>
    </div>
  </ul>
<% end %>
<div class="paging"><%= will_paginate @categories, renderer: WillPaginate::ActionView::Bootstrap4LinkRenderer %></div>
