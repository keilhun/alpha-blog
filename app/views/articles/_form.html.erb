
<%= render 'shared/errors', obj: @article %>

<div class="row">
  <div class="col">
    <%= form_for @article do |f| %>
      <div class="form-group row">
        <div class="col-sm-2 col-form-label text-right">
          <%= f.label :title %>
        </div>
        <div class="col-sm-8">
          <%= f.text_field :title, class: 'form-control', placeholder: 'Title of article', autofocus: true %>
        </div>
      </div>
      <div class="form-group row text-right">
        <div class="col-sm-2 col-form-label">
          <%= f.label :description %>
        </div>
        <div class="col-sm-8">
          <%= f.text_area :description, rows: 10, class: 'form-control', placeholder: 'Body of article' %>
        </div>
        </p>
      </div>
      <div class="form-group row">
        <div class="col-sm-8 offset-sm-2">
          <%= f.collection_check_boxes :category_ids, Category.all, :id, :name do |cb| %>
            <% cb.label(class: "checkbox-inline input_checkbox") {cb.check_box(class: "checkbox") + cb.text + ' '} %>
          <% end %>
        </div>
      </div>

      <div class="form-group row">
        <div class="col-sm-10 offset-sm-2">
          <%= f.submit class: 'btn btn-primary btn-lg' %>
        </div>
      </div>
    <% end %>

    <div class="row">
      <div class="col-sm-4 offset-sm-4 text-small">
        [ <%= link_to 'Cancel request and return to articles listing', articles_path %> ]
      </div>
    </div>
  </div>
</div>