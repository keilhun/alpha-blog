<h1 class="text-center page-title">All Alpha Bloggers</h1>
<div class="paging"><%= will_paginate @users, renderer: WillPaginate::ActionView::Bootstrap4LinkRenderer %></div>
<% @users.each do |user| %>
  <ul class="listing text-center">
    <div class="row">
      <div class="card bg-light col-4 offset-sm-4">
        <li class="top-pad"><%= link_to gravatar_for(user), user_path(user) %></li>
        <li class="article-title"><%= link_to user.username, user_path(user) %></li>
        <li class="text-small"><%= pluralize(user.articles.count, "article") if user.articles %></li>
        <% if logged_in? && current_user.admin? %>
          <li><%= link_to "Delete this user", user_path(user), method: :delete, data: { confirm:
                          "Are you sure you want to delete the user and all their articles"} %></li>
        <% end %>
      </div>
    </div>
  </ul>
<% end %>
<div class="paging"><%= will_paginate @users, renderer: WillPaginate::ActionView::Bootstrap4LinkRenderer %></div>