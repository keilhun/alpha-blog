<%= render 'shared/errors', obj: @user %>

<div class="row">
  <div class="col">
    <%= form_for @user do |f| %>
      <div class="form-group row">
        <div class="col-sm-2 col-form-label text-right">
          <%= f.label :username %>
        </div>
        <div class="col-sm-8">
          <%= f.text_field :username, class: 'form-control', placeholder: 'Enter user name', autofocus: true %>
        </div>
      </div>
      <div class="form-group row text-right">
        <div class="col-sm-2 col-form-label">
          <%= f.label :email %>
        </div>
        <div class="col-sm-8">
          <%= f.email_field :email, class: 'form-control', placeholder: 'Enter email' %>
        </div>
        </p>
      </div>

      <div class="form-group row text-right">
        <div class="col-sm-2 col-form-label">
          <%= f.label :password %>
        </div>
        <div class="col-sm-8">
          <%= f.password_field :password, class: 'form-control', placehoder: 'Enter password' %>
        </div>
        </p>
      </div>

      <div class="form-group row">
        <div class="col-sm-10 offset-sm-2">
          <%= f.submit(@user.new_record? ? 'Sign up' : 'Update account', class: 'btn btn-primary btn-lg') %>
        </div>
      </div>
    <% end %>

    <div class="row">
      <div class="col-sm-4 offset-sm-4 text-small">
        [ <%= link_to 'Cancel request and return to articles listing', articles_path %> ]
      </div>
    </div>
  </div>
</div>